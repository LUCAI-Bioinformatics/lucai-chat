{
  "name": "lucai-platform",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "install": "npm run install:frontend && npm run install:backend",
    "install:frontend": "npm install --prefix apps/frontend",
    "install:backend": "npm install --prefix apps/backend",
    "dev": "npm run dev:frontend",
    "dev:frontend": "npm run dev --prefix apps/frontend",
    "dev:backend": "npm run dev --prefix apps/backend",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "npm run build --prefix apps/frontend",
    "build:backend": "npm run build --prefix apps/backend",
    "start": "npm run start:frontend",
    "start:frontend": "npm run start --prefix apps/frontend",
    "start:backend": "npm run start --prefix apps/backend",
    "lint": "npm run lint --prefix apps/frontend && npm run lint --prefix apps/backend"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
